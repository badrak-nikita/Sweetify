{% extends 'adminPanel/admin_base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="/adminPanel/css/order.css" />

    <div class="wrapper">
        {% include 'adminPanel/components/sidebar.html.twig' %}

        <div class="main-panel">
            {% include 'adminPanel/components/header.html.twig' %}

            <div class="container">
                <div class="page-inner">

                    <div class="row">
                        <div class="col-md-8">
                            <div class="card card-round">
                                <div class="card-header">
                                    <div class="card-head-row card-tools-still-right">
                                        <div class="card-title">Замовлення</div>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">

                                        <table class="table align-items-center mb-0">
                                            <thead class="thead-light">
                                            <tr>
                                                <th scope="col">ID замовлення</th>
                                                <th scope="col">Дата</th>
                                                <th scope="col">Загальна сума</th>
                                                <th scope="col">Статус</th>
                                                <th scope="col">Дiя</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for order in orders %}
                                                <tr data-order='{{ order|json_encode|e('html_attr') }}'
                                                    data-id="{{ order.id }}">
                                                    <td data-label="ID замовлення">#{{ order.id }}</td>
                                                    <td data-label="Дата">{{ order.createdAt|date('d.m.Y, H:i') }}</td>
                                                    <td data-label="Загальна сума">{{ order.totalPrice }} грн</td>
                                                    <td data-label="Статус">
                                                        {% set status = {
                                                            1: 'Очікує',
                                                            2: 'Завершено',
                                                            3: 'Доставляється',
                                                            4: 'Скасовано'
                                                        } %}
                                                        {% set badgeClass = {
                                                            1: 'info',
                                                            2: 'success',
                                                            3: 'warning',
                                                            4: 'danger'
                                                        } %}
                                                        <span class="badge badge-{{ badgeClass[order.status]|default('secondary') }}">
                                                            {{ status[order.status]|default('Невідомо') }}
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <button class="btn btn-sm btn-outline-primary change-status-btn">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
                                                            <div class="dropdown-menu status-dropdown d-none">
                                                                <a class="dropdown-item" data-status="1" href="#">Очікує</a>
                                                                <a class="dropdown-item" data-status="2" href="#">Завершено</a>
                                                                <a class="dropdown-item" data-status="3" href="#">Доставляється</a>
                                                                <a class="dropdown-item" data-status="4" href="#">Скасовано</a>
                                                            </div>
                                                            <button class="btn btn-sm btn-outline-info view-details-btn">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr><td colspan="5" class="text-center text-muted">Замовлень поки немає</td></tr>
                                            {% endfor %}
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card card-round">
                                <div class="card-body">
                                    <div class="card-head-row card-tools-still-right">
                                        <div class="card-title">Деталi замовлення</div>
                                    </div>
                                    <div class="card-list py-4 order-details">
                                        <p><strong>Ім'я:</strong> <span id="detail-name">-</span></p>
                                        <p><strong>Email:</strong> <span id="detail-email">-</span></p>
                                        <p><strong>Телефон:</strong> <span id="detail-phone">-</span></p>
                                        <p><strong>Область:</strong> <span id="detail-region">-</span></p>
                                        <p><strong>Місто:</strong> <span id="detail-city">-</span></p>
                                        <p><strong>Відділення:</strong> <span id="detail-department">-</span></p>
                                        <p><strong>Коментар:</strong> <span id="detail-comment">-</span></p>
                                        <hr>
                                        <h5 class="mt-3 mb-2">Товари в замовленнi</h5>
                                        <div class="table-responsive-x">
                                            <table class="table table-bordered table-sm w-100">
                                                <thead>
                                                    <tr>
                                                        <th>Назва товару</th>
                                                        <th>Ціна</th>
                                                        <th>Смак</th>
                                                        <th>Текст</th>
                                                        <th>Зображення</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="detail-items">
                                                    <tr><td colspan="3" class="text-center">Немає товарів</td></tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

                {% include 'adminPanel/components/footer.html.twig' %}
            </div>
        </div>
    </div>

    <script src="/adminPanel/js/order.js"></script>
{% endblock %}
