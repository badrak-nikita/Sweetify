{% extends 'base.html.twig' %}
{% block title %}Оформлення замовлення - Sweetify{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css"/>
    <link rel="stylesheet" href="/css/order/style.css">
    <body id="top">

    <div id="page" class="s-pagewrap">
        {% include 'components/header.html.twig' %}

        <section id="" class="container s-testimonials">
            <div class="s-intro__content">

                <section class="order-section">
                    <div class="order-container">
                        <div class="order-form-section">
                            <h1 class="order-title">Оформлення замовлення</h1>

                            <form method="post" action="{{ path('app_checkout') }}" id="checkout-form">
                                <label>Персональнi данi</label>
                                <div class="form-group">
                                    <input type="text" name="clientName" placeholder="ПIБ" value="{{ app.user ? app.user.name : '' }}" required>
                                </div>

                                <div class="form-group">
                                    <input type="email" name="clientEmail" placeholder="Email" value="{{ app.user ? app.user.email : '' }}" required>
                                </div>

                                <div class="form-group">
                                    <input type="tel" name="clientPhone" placeholder="Телефон" value="{{ app.user ? app.user.phone : '' }}" required>
                                </div>

                                <label>Доставка</label>
                                <div class="form-group">
                                    <select id="region-select" name="" required>
                                        <option value="">Оберіть область</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <select id="city-select" name="" required disabled>
                                        <option value="">Оберіть місто</option>
                                    </select>
                                </div>

                                <input type="hidden" name="region" id="region-name-input">
                                <input type="hidden" name="city" id="city-name-input">

                                <div class="form-group">
                                    <select id="warehouse-select" name="department" required disabled>
                                        <option value="">Оберіть відділення</option>
                                    </select>
                                </div>

                                <div class="form-group payment-type-group">
                                    <label>Тип оплати:</label>
                                    <div class="payment-type-options">
                                        {% for type in paymentTypes %}
                                            <label class="payment-option">
                                                <input type="radio" name="paymentTypeId" value="{{ type.id }}" required>
                                                {{ type.paymentTypeName }}
                                            </label>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="form-group comment-group">
                                    <textarea name="comment" placeholder="Побажання до замовлення або ваше питання" rows="3"></textarea>
                                </div>

                                <input type="hidden" name="itemDetails" id="item-details-input">

                                <div class="order-buttons">
                                    <button type="submit">Оформити замовлення</button>
                                </div>
                            </form>

                        </div>

                        <div class="order-summary-section">
                            <h3 class="summary-title">Кошик</h3>

                            <p class="modal-description">
                                <i>
                                    Ви можете додати вашу фотографію та текст з побажанням прямо у цiй формі, натиснувши на вашу обрану шоколадку
                                </i>
                            </p>

                            {% if selectedItems is empty %}
                                <div class="summary-item">Кошик порожній</div>
                            {% else %}
                                {% for item in selectedItems %}
                                    <div class="summary-item with-image cart-item"
                                         data-index="{{ loop.index0 }}"
                                         data-categories='{{ item.categories|json_encode|raw }}'
                                         data-name="{{ item.name }}"
                                         data-image="{{ asset(item.image) }}"
                                         data-quantity="{{ item.quantity }}">
                                        <img src="{{ asset(item.image) }}" alt="{{ item.name }}">
                                        <div class="summary-details">
                                            <div>{{ item.name }} x{{ item.quantity }}</div>
                                            <div>{{ item.subtotal }} грн</div>
                                        </div>
                                    </div>
                                {% endfor %}

                                <hr>
                                <div class="summary-total">
                                    Загальна сума: <span style="color: #386c5c">{{ total }}</span> грн
                                </div>
                            {% endif %}
                        </div>

                    </div>
                </section>

            </div>
        </section>

        {% include 'components/footer.html.twig' %}
    </div>

    <div id="item-modal" class="modal hidden">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3 class="modal-title">Створення шоколадки</h3>
            <p class="modal-description">
                Ви можете завантажити власне зображення та написати ваш текст, який буде додано на обкладинку.
            </p>
            <form id="item-edit-form">
                <div id="item-fields-container" class="modal-body">
                    <!-- JS  -->
                </div>
                <div class="modal-footer">
                    <button type="submit">Зберегти</button>
                </div>
            </form>
        </div>
    </div>

    </body>

    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="/js/order/script.js"></script>
{% endblock %}
